@model RegisterModel

<h2>Реєстрація</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Login"></label>
            <input type="text" asp-for="Login" />
            <span class="error" asp-validation-for="Login"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span class="error" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" />
            <span class="error" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="PasswordConfirm"></label>
            <input asp-for="PasswordConfirm" />
            <span class="error" asp-validation-for="PasswordConfirm"></span>
        </div>
        <div>
            <p><a asp-action="Login" asp-controller="Account">Вхід</a>.</p>
        </div>
        <div class="clearfix">
            <button type="submit" class="signupbtn">Реєстрація</button>
        </div>
    </div>
</form>