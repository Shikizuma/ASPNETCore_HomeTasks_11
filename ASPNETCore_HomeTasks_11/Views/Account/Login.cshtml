<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" style="border:1px solid #ccc">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="container">
        <h1>Вхід</h1>
        <hr>
        <div>
            <label asp-for="Login"></label>
            <input type="text" asp-for="Login" />
            <span class="error" asp-validation-for="Login"></span>
        </div>

        <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" />
        <span class="error" asp-validation-for="Password"></span>
        </div>

        <div>
        <p><a asp-action="Register" asp-controller="Account">Реєстрація</a>.</p>
        </div>

        <div class="clearfix">         
            <button type="submit" class="signupbtn">Вхід</button>
        </div>


    </div>
</form>
